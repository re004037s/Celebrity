<h2 class="page-title-jp">
  <span>面談内容の編集</span>
</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@interviewpost, html:{:id => 'interview-edit-form'}) do |f| %>
      <%= render partial: 'form', locals: {f: f} %>
        <div id="centering">
          <%= f.submit "更新", {class: 'btn btn-default active post-update' } %>
        </div>
    <% end %>
  </div>
</div>
  
<div class="center mt_20">
  <%= link_to "削除", @interviewpost, class: "btn btn-danger post-delete", method: :delete,
                                   data: { confirm: "本当に削除しますか?" } %>
</div>

<script>
  $(document).ready(function(){
    $("#interview-edit-form").validationEngine();
  });
</script>