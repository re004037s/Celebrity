<h4 class="movie-title"><%= movie.title %></h4>
<div class="movie">
  <div id="movie-layer" class="movie-layer"></div>
  <% param = '?rel=0' + '&controls=0' + '&modestbranding=1' %>
  <!--< param = '?rel=0&amp;controls=0&amp' %>-->
  <iframe src="<%= movie.path + param %>" frameborder="0" allowfullscreen></iframe>
</div>

<% if @category.must_view %>
  <div class="mv-btn">
    <% if current_user.feedbacks.find_by(movie_id: movie.id) %>
      <%= image_submit_tag("button_feedback2.png", id: "show-form#{movie.sort_order}", class: "img-feed-btn") %>
    <% else %>
      <%= image_submit_tag("button_feedback1.png", id: "show-form#{movie.sort_order}", class: "img-feed-btn") %>
    <% end %>
  </div>
<% end %>



<script>
(function() {

  var iframes = document.querySelectorAll("iframe");
  
  iframes[0].onload = function() {
  //console.log('hay')
  //console.log(iframes);
  var modal_layer = $('.movie-layer'); 
  // トップフレーズを表示する
  let top_phrase = 'セレブエンジニアリング';
  // modalを表示する
  modal_layer.html(top_phrase);
  // モーダルのcss設定
  modal_layer.css();
  // モーダルを表示状態にする
  modal_layer.show();
  
  // モーダルのcss設定
  // modal_layer.css(
