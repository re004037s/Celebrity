  //   'top': '34px',
  //   'height':'30px',
  //   'width' : '600px',
  //   'max-width' : '600px'
  //   }
  // );

  // HTMLとして出力する
  $('.movie-title').after(modal_layer);
  
  };
    
})();

  // モーダルのcss設定
  $(window).on('load resize', function(){
    var modal_layer = $('.movie-layer');
    sW = window.innerWidth;
  	let adjustLayout = (sW <= 1261) 
  	? {'width' :'100%', 'font-size' : '1em'} 
  	: {'width' : '410px'};
  
    modal_layer.css(adjustLayout);
  
  });
</script>
