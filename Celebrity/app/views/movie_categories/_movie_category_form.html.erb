<div class="category-form">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for(@movie_category, html:{:id => 'movie-category-form'}) do |f| %>

        <div class="form-group">
          <%= f.label :name, 'カテゴリ名', class: 'txt3' %>
          <%= f.text_field :name, class: 'form-control validate[required,maxSize[12]] text-input', :onkeyup => "NameLength(value);" %>
          <p id="name-input-length">0文字</p>
        </div>

        <div class="form-inline">
          <label class="checkbox-inline">
            <%= f.check_box :must_view, {}, 'true', 'false' %>
            感想送信を必須にする
          </label>
        </div>
        <div class="form-inline">
          <label class="checkbox-inline">
            <%= f.check_box :venture_movie, {}, 'true', 'false' %>
            ITベンチャー起業コースの動画
          </label>
        </div>
        <div class="form-inline">
          <label class="checkbox-inline">
            <%= f.check_box :free_engineer_movie, {}, 'true', 'false' %>
            フリーエンジニアコースの動画
          </label>
        </div>
  
        <%= f.submit "登録", class: "btn-log btn btn-default active" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $("#movie-category-form").validationEngine();
  });
  
  function NameLength( str ) {
    document.getElementById("name-input-length").innerHTML = str.length + "文字";
  }
</script>