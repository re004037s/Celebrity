<h1>投稿編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@qiitapost) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @qiitapost } %>

      <%= f.label :title, "タイトル", class: 'txt1' %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :url, '投稿URL', class: 'txt1' %>
      <%= f.text_field :url, class: 'form-control' %>

    <div id="centering">
      <%= f.submit "更新", {class: 'btn btn-primary post-update' } %>
    </div>
    
    <% end %>
  </div>
</div>

<div id="centering">
  <% if current_user.admin? || current_user?(@qiitapost.user) %>
  <%= link_to "削除", @qiitapost, class: "btn btn-danger post-delete", method: :delete,
                                   data: { confirm: "本当に削除しますか?" } %>
  <% end %>
</div>