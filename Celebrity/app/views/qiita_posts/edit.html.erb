<h2 class="page-title-jp">
  <span>投稿編集</span>
</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@qiitapost, html:{:id => 'giitapost-edit-form'}) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @qiitapost } %>

      <%= f.label :title, "タイトル", class: 'txt1' %>
      <%= f.text_field :title, class: 'form-control validate[required,maxSize[25]] text-input', :onkeyup => "TitleLength(value);" %>
      <p id="title-input-length">0文字</p>
      
      <%= f.label :url, '投稿URL', class: 'txt1 mt_20' %>
      <%= f.text_field :url, class: 'form-control validate[required,maxSize[100]] text-input', :onkeyup => "UrlLength(value);" %>
      <p id="url-input-length">0文字</p>

      <div class="center">
        <%= f.submit "更新", class: 'btn btn-default active' %>
      </div>
    <% end %>
  </div>
</div>

<div class="center mt_20">
  <%= link_to "削除", @qiitapost, class: "btn btn-danger", method: :delete,
                                   data: { confirm: "本当に削除しますか?" } %>
</div>

<script>
  $(document).ready(function(){
    $("#giitapost-edit-form").validationEngine();
  });
  
  function TitleLength( str ) {
    document.getElementById("title-input-length").innerHTML = str.length + "文字";
  }
  
  function UrlLength( str ) {
    document.getElementById("url-input-length").innerHTML = str.length + "文字";
  }
</script>