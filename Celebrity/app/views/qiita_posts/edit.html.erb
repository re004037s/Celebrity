<h1>投稿編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@qiitapost) do |f| %>
      <p>
        <%= f.label :title, "タイトル" %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :url, "投稿URL" %><br>
        <%= f.text_field :url %>
      </p>
      <p>
        <%= f.submit "更新", {class: 'btn btn-primary post-update' } %>
      </p>
    <% end %>
  </div>
</div>

<% if current_user?(@qiitapost.user) %>
<%= link_to "削除", @qiitapost, class: "btn btn-danger post-delete", method: :delete,
                                 data: { confirm: "本当に削除しますか?" } %>
<% end %>