<h2 class="page-title-jp">
  <span>投稿編集</span>
</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@qiitapost) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @qiitapost } %>

      <%= f.label :title, "タイトル", class: 'txt1' %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :url, '投稿URL', class: 'txt1' %>
      <%= f.text_field :url, class: 'form-control' %>

      <div class="center">
        <%= f.submit "更新", class: 'btn btn-default active' %>
      </div>
    <% end %>
  </div>
</div>

<div class="center mt_20">
  <%= link_to "削除", @qiitapost, class: "btn btn-danger", method: :delete,
                                   data: { confirm: "本当に削除しますか?" } %>
</div>