<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@qiitapost) do |f| %>
      <% if @qiitapost.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @qiitapost.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
      <p>
        <%= f.label :title, "タイトル" %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :url, "投稿URL" %><br>
        <%= f.text_field :url %>
      </p>
      <div class="button_wrapper"> 
        <%= f.submit '登録', {class: 'btn btn-regist' }%>
      </div>
    <% end %>
  </div>
</div>