<div class="questions-edit--wrapper">
  
  	<h2 class="page-title-jp">
    	<span>よくある質問の編集</span>
   	</h2>
    
	<%= form_for(@question) do |f| %>
 		<%= f.label :category %>
  		<%= f.text_field :category %>
 		<%= f.label :question %>
  		<%= f.text_area :question %>
  		<%= f.label :answer %>
  		<%= f.text_area :answer %>
 		 <%= f.submit "更新" %>
	<% end %>
	
	<%= link_to "戻る", questions_path %>
	<%= link_to "削除", @question, class: "btn btn-danger", method: :delete,
                                   data: { confirm: "本当に削除しますか?" } %>

</div>