<div class="questions-index--wrapper">
  
  <h2 class="page-title-jp">
    <span>よくある質問</span>
  </h2>
  
      <div class="panel panel-success">
        <div class="panel-heading">
      <% @question_categories.each do |category| %>
    <% if category.name.nil? %>
          <%= "blank" %><br>
       <% else %>
      <%= category.name %><br>
      <% end %>
        	  <%= link_to "カテゴリー編集", edit_question_category_path(category), class: "sm-btn btn-success"  %><br>
        	  
        	     <% @questions.each do |question| %>
        	                     Q :<%= question.question %><br>
        	                       <% end %>
  <% end %>
        </div>
        </div>
  
  <!-- QA bootstrap アコーディオン -->
  
  <div class="panel-group" id="sampleAccordion">
    <div class="panel panel-success">
      <div class="panel-heading">
        カテゴリー
      </div>
    </div>
  	
  
	  <% sampleAccordionCollapse = 1 %>
    <% @questions.each do |question| %>

      <% if sampleAccordionCollapse != 0 %>
      	<% sampleAccordionCollapse += 1 %>

  	    <div class="panel panel-default">
  	    	<div class="panel-heading">
  			    <h3 class="panel-title">
  		    		<a style="display:block" data-toggle="collapse" data-parent="#sampleAccordion" href="#<%= sampleAccordionCollapse %>">
                Q :<%= question.question %><br>
                 <div class="question-padding">
                  <%= link_to "編集", edit_question_path(question) ,class: "btn btn-success" %>
                </div>
   				    </a>
  		    	</h3>
  	     	</div>
  		
  		  	<div id= <%= sampleAccordionCollapse %> class="panel-collapse collapse">
  			    <div class="panel-body">
              A :<%= question.answer %><br>
    		  	</div>
  	    	</div>
      	</div>
    	
      <% end %>
    <% end %>

    <div class="question-padding">
  	  <%= link_to "新規作成", new_question_path, class: "btn btn-primary"  %>
  	  <%= link_to "カテゴリー作成", new_question_category_path, class: "btn btn-primary"  %>
  	</div>
  	   
  </div>
</div>