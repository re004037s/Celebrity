<div class="questions-new--wrapper">
  
    <h2 class="page-title-jp">
      <span>よくある質問と回答の作成</span>
    </h2>
    
    <%= form_for(@question) do |f| %>
      <%= f.label :question_category_id, 'カテゴリを選択', class: 'txt3' %>
      <%= f.collection_select :question_category_id, QuestionCategory.all, :id,:name %><br><br>
      <%= f.label :question %>
      <%= f.text_area :question , class: 'question-form' %><br><br>
      <%= f.label :answer %>
      <%= f.text_area :answer , class: 'question-form' %><br>
      <%= f.submit "追加する" ,class: "btn btn-primary" %>
    <% end %>
    
    <div class="question-padding">
     <%= link_to "よくある質問ページへ戻る", questions_path ,class: "btn btn-info" %>
    </div>
    
</div>