<% content_for :entrance do %>

<div class="login-box">
  <div class="login-logo">
    <p>Celebrity Engineers</p>
  </div>
  
  <div class="login-box-body">
    <%= form_for(:session, url: login_path, html:{:id => 'sessions-new-form'}) do |f| %>

      <div class="form-group has-feedback">
        <%= f.label :email, '', class: '' %>
        <%= f.email_field :email, class: 'form-control validate[required,maxSize[50],custom[email]',
                          :onkeyup => "EmailLength(value);"%>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <!--<p id="email-input-length">0文字</p>-->

      <div class="form-group has-feedback">
        <%= f.label :password, '', class: ''%>
        <%= f.password_field :password, class: 'form-control validate[required,minSize[6]] text-input',
                             :onkeyup => "PasswordLength(value);" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <!--<p id="password-input-length">0文字</p>-->
      
      <div class="row">
        <div class="col-xs-8">
          <!--<div class="checkbox icheck">-->
          <!--  <label>-->
          <!--    <input type="checkbox"> Remember Me-->
          <!--  </label>-->
          <!--</div>-->
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Log In</button>
        </div>
        <!-- /.col -->
      </div>
      
      <%= link_to "I forgot my password", new_password_reset_path, class: '' %>

      <!--<= image_submit_tag("button_login.png", class: "form-entrance--button") %>-->
    <% end %>
  </div>
</div>


