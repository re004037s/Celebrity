<!--テンプレートのソースを変更-->
<% content_for :entrance do %>

<div class="form-entrance-signup">
  <div class="form-entrance--wrapper">
    <h6 class="form-entrance--title">新規登録</h6>
    
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { object: @user } %>
    
      <%= f.label :name, "氏名", class: 'form-entrance--label' %>
      <%= f.text_field :name, class: 'form-entrance--textbox' %>

      <%= f.label :nickname, "ニックネーム", class: 'form-entrance--label' %>
      <%= f.text_field :nickname, class: 'form-entrance--textbox' %>

      <%= f.label :email, 'Email', class: 'form-entrance--label' %>
      <%= f.email_field :email, class: 'form-entrance--textbox' %>
      
      <%= f.label :line_id, "LINE ID", class: 'form-entrance--label' %>
      <%= f.text_field :line_id, class: 'form-entrance--textbox' %>

      <%= f.label :password, 'パスワード', class: 'form-entrance--label' %>
      <%= f.password_field :password, class: 'form-entrance--textbox' %>

      <%= f.label :password_confirmation, "パスワード確認", class: 'form-entrance--label' %>
      <%= f.password_field :password_confirmation, class: 'form-entrance--textbox' %>

      <%= f.submit "登録", class: "btn btn-default active btn-block form-kari-button" %>
      <!--画像を差し込む場合は下記を加工してください。-->
      <!--<= image_submit_tag("button_xxxxx.png", class: "form-entrance--button") %>-->
      
      <%= link_to ">> TOPページへ戻る", login_path, class: 'form-entrance--link' %>
    <% end %>
  </div>
</div>

<% end %>