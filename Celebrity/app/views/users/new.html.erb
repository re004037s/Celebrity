<h1 class="txt5">サインアップ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :name, "氏名", class: 'txt1' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :nickname, "ニックネーム", class: 'txt1' %>
      <%= f.text_field :nickname, class: 'form-control' %>

      <%= f.label :email, 'Email', class: 'txt1' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, 'パスワード', class: 'txt1' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "パスワード確認", class: 'txt1' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    <div id="centering">
      <%= f.submit "登録！", class: "btn-log btn btn-primary" %>
      </div>
      <p></p>
    <div id="centering">
      <%= link_to "トップページへ戻る", login_path, class: "btn-log btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
<style>
.navbar{display:none;}
body{padding-top:0px;}
.blank-box{display:none;}
</style>